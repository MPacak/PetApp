<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <!-- Vertical container for everything on one “dog” page -->
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 1) Large header image at the top -->
        <ImageView
            android:id="@+id/ivDogPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"

            android:contentDescription="@string/dog_phot" />

        <!-- 2) Dog name -->
        <TextView
            android:id="@+id/tvDogName"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <!-- 3) Primary breed (and “Mixed” badge) -->
        <LinearLayout
            android:id="@+id/breedRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <!-- Breed text -->
            <TextView
                android:id="@+id/tvBreedPrimary"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- If breedMixed == true, show a little “Mixed” chip/badge -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipMixed"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:chipStrokeColor="?attr/colorSecondary"
                app:chipStrokeWidth="1dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- 4) Row of small “attribute chips”: age, gender, size, coat -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupCoreAttrs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:singleLine="true"
            app:chipSpacing="8dp"
            android:rowCount="1">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAge"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipGender"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gender" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSize"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/size" />

        </com.google.android.material.chip.ChipGroup>

        <!-- 5) Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOnSurface"
            android:layout_marginTop="16dp" />

        <!-- 6) Description section -->
        <TextView
            android:id="@+id/tvDescription"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="4dp" />
        <TextView
            android:id="@+id/tvCoatColor"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/coat_and_color"/>
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupCoatColors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:singleLine="true"
            app:chipSpacing="8dp"
            android:rowCount="1">


            <com.google.android.material.chip.Chip
                android:id="@+id/chipCoat"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipColorPrimary"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipColorSecondary"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </com.google.android.material.chip.ChipGroup>
    </LinearLayout>
</ScrollView>